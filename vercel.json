{
    "version": 2,
    "builds": [
      {
        "src": "api/[...path].js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": "api/**"
        }
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { 
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/parse-transcript",
        "dest": "/api/[...path].js"
      },
      {
        "src": "/api/(.*)",
        "dest": "/api/[...path].js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }